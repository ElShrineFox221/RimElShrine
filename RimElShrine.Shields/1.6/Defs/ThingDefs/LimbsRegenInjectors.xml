<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="MechSerumBase" Name="ELSInjectorBase" Abstract="True">
        <stackLimit>10</stackLimit>
        <statBases>
            <WorkToMake>1200</WorkToMake>
        </statBases>
        <thingCategories>
            <li>Drugs</li>
        </thingCategories>
        <tradeability>Sellable</tradeability>
        <comps>
            <li Class="CompProperties_Usable">
                <useJob>UseItem</useJob>
                <useLabel>Use This</useLabel>
                <useDuration>600</useDuration>
                <showUseGizmo>true</showUseGizmo>
            </li>
            <li Class="CompProperties_UseEffectPlaySound">
                <soundOnUsed>MechSerumUsed</soundOnUsed>
            </li>
            <li Class="CompProperties_UseEffectDestroySelf" />
        </comps>
        <thingSetMakerTags>
            <li>RewardStandardCore</li>
        </thingSetMakerTags>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <skillRequirements>
                <Crafting>10</Crafting>
                <Medicine>6</Medicine>
            </skillRequirements>
            <recipeUsers>
                <li>DrugLab</li>
            </recipeUsers>
            <unfinishedThingDef>ELS_Thing_UnfinishedInjector</unfinishedThingDef>
            <researchPrerequisite>ELS_ResearchProject_BasicMechSerumProduction</researchPrerequisite>
        </recipeMaker>
        <costList>
            <ELS_Thing_EmptyInjector>1</ELS_Thing_EmptyInjector>
        </costList>
    </ThingDef>
    <!-- UnfinishedInjector-->
    <ThingDef ParentName="UnfinishedBase" ELSClass="mechserum">
